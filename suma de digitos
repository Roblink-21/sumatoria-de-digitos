#include <iostream>

using namespace std;

int suma(int m, int n);
int main()
{
	int m,n;
    cout << "Ingrese el primer numero: ";
    cin >> n;
    
    while ( n < 0 )
    {
    	cout << "Ingrese un numero positivo: ";
    	cin >> n;

    }
    if ( n >= 0 )
    {
    	cout << "Ingrese el numero final para tener el dominio: ";
    	cin >> m;
    		
    	while (m <= n )
    	{
    	cout << " El rango final no puede ser menor ingrese otro numero: ";
    	cin >> m;
    }
    
    if ( m >= n)
    {
    	cout << "La sumatoria de numeros del dominio de " << "["<< n <<" , " << m << "]"<< " es: " << suma (m,n);
    
    }
    
    }
     
    
    
    return 0;
}

int suma(int m, int n)
{
	int suma = 0, s;
	while ( n <= m )
	{
    	suma = suma + n;
    	n++;
    	
    }
    s = s + m;
    return suma;
	
	
}
